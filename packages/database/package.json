{
  "name": "@repo/database",
  "version": "0.0.1",
  "description": "Database package",
  "scripts": {
    "build": "unbuild --clean",
    "stub": "unbuild --stub",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "check-types": "tsc --noEmit",
    "lint": "eslint ."
  },
  "exports": {
    "./clients": {
      "import": {
        "default": "./dist/clients/index.mjs",
        "type": "./dist/clients/index.d.ts"
      },
      "require": {
        "default": "./dist/clients/index.cjs",
        "type": "./dist/clients/index.mjs"
      }
    },
    "./schema": {
      "import": {
        "default": "./dist/schema/index.mjs",
        "type": "./dist/schema/index.d.ts"
      },
      "require": {
        "default": "./dist/schema/index.cjs",
        "type": "./dist/schema/index.mjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "pg": "^8.16.2"
  },
  "peerDependencies": {
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/pg": "^8.15.4",
    "drizzle-kit": "^0.31.4",
    "drizzle-zod": "^0.8.2",
    "eslint": "^9.29.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "unbuild": "^3.6.0"
  }
}
